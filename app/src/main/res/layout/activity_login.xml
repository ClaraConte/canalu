<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:visibility="visible"
            app:srcCompat="@drawable/logo"
            tools:srcCompat="@tools:sample/avatars" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:id="@+id/linearLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="67dp">

            <TextView
                android:id="@+id/titleUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_title_user"/>
            <EditText
                android:id="@+id/editTextUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                app:backgroundTint="@color/colorLinea"
                android:textSize="16sp"
                android:inputType="textPersonName"
                android:text="preventcanalu" />

            <TextView
                android:id="@+id/titlePass"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_title_pass"/>
            <EditText
                android:id="@+id/editTextPass"
                app:backgroundTint="@color/colorLinea"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:text="123" />

            <TextView
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff0000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/login"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/ic_item_input_black_24dp"
            android:background="@drawable/button_solid"
            android:textColor="@color/colorPrimary"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:paddingHorizontal="20dp"
            android:text="Ingresar" />
    </LinearLayout>
</androidx.cardview.widget.CardView>